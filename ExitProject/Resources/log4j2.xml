<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">

<Properties>
    <Property name="bpath">./Result/Logs</Property>
  </Properties>
 
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <RollingFile name="File" fileName="${bpath}/execlog.log"
                       filePattern="${bpath}/execlog-%d{yyyy-MM-dd}.log">
            <PatternLayout>
              <pattern>%d %p %c{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
            <SizeBasedTriggeringPolicy size="5 MB" />
            </Policies>
          </RollingFile>
  </Appenders>
  
 <Loggers>
    <Logger name="RedbusTesting" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="trace">
    <AppenderRef ref="File"/>
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>